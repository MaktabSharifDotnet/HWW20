@page
@model App.EndPoints.RazorPages.HWW20.Pages.AppointmentRequestAgg.CreateModel
@{
}

<h1>فرم ثبت درخواست </h1>

<link rel="stylesheet" href="~/css/form_styles.css" />
<form method="post" class="form-body">
    <div class="form-grid">

        <div class="form-group">
            <label asp-for="RegisterInfoDto.OwnerName">نام و نام خانوادگی</label>
            <input asp-for="RegisterInfoDto.OwnerName" type="text" placeholder="نام مالک خودرو">

        </div>

        <div class="form-group">
            <label asp-for="RegisterInfoDto.Mobile">شماره همراه</label>
            <input asp-for="RegisterInfoDto.Mobile" type="text" placeholder="مثال: 0912xxxxxxx">

        </div>


        <div class="form-group">
            <label asp-for="RegisterInfoDto.NationalCode">کد ملی</label>
            <input asp-for="RegisterInfoDto.NationalCode" type="text" placeholder="کد ملی مالک">
        </div>


        <div class="form-group" style="grid-column: span 2;">
            <label>شماره پلاک خودرو</label>

            <div class="plate-container">
                <input asp-for="PlatePart1" class="plate-input" type="number" placeholder="12" style="width: 60px;" max="99" required>

                <select asp-for="PlateLetter" class="plate-input" style="width: 70px;" required>
                    <option value="">حرف</option>
                    @foreach (var letter in Model.AlphabetList)
                    {
                        <option value="@letter">@letter</option>
                    }
                </select>

                <input asp-for="PlatePart2" class="plate-input" type="number" placeholder="345" style="width: 80px;" max="999" required>

                <span style="font-size: 20px; align-self: center;">-</span>

                <div style="display: flex; flex-direction: column; align-items: center;">
                    <span style="font-size: 10px;">ایران</span>
                    <input asp-for="PlateIranId" class="plate-input" type="number" placeholder="66" style="width: 60px;" max="99" required>
                </div>
            </div>
            <span class="text-muted" style="font-size: 12px;">چیدمان: ایران 66 - 345 ج 12</span>


            <div class="form-group">
                <label asp-for="RegisterInfoDto.Address">آدرس</label>
                <input asp-for="RegisterInfoDto.Address" type="text" placeholder="آدرس پستی کامل">

            </div>


            <div class="form-group">
                <label asp-for="RegisterInfoDto.Year">سال تولید</label>
                <input asp-for="RegisterInfoDto.Year" type="text" placeholder="مثال: 1399">

            </div>


            <div class="form-group">
                <label asp-for="RegisterInfoDto.RequestDateShamsi">تاریخ درخواست</label>

                <input asp-for="RegisterInfoDto.RequestDateShamsi" type="text" placeholder="مثال: 1403/05/20">

            </div>

            <div class="form-group">
                <label asp-for="RegisterInfoDto.CarModelId">مدل خودرو</label>
                <select asp-for="RegisterInfoDto.CarModelId">
                    <option value="">انتخاب مدل...</option>
                    @foreach (var car in Model.CarModelDtos)
                    {
                        <option value="@car.Id">@car.Name (@car.Company)</option>
                    }
                </select>

            </div>

        </div>

        <div class="submit-button">
            <button type="submit">ذخیره درخواست</button>
        </div>
</form>
</div>